{{ 'component-image-with-text.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
  .artist-media img{
    width: auto !important;
  }
  .image-with-text__content{
    padding-top: 0!important;
  }
  #font700 {
    font-size: 1.8rem;
    font-weight: 700 !important;
  }
  .artist--bio {
    font-size: 1.3rem !important;
    font-weight: 300 !important;
  }
  @media screen and (max-width: 749px){
    .image-with-text__content{
    padding-top: 4rem!important;
    padding-left: 0rem!important;
  }
  .image-with-text__content .image-with-text__text.rte{
        max-height:150px;
    overflow:hidden;
    transition: 0.6s;
  }
  .show-bio{
    max-height: max-content !important;
  }
  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .newreadbtn{
    background: transparent !important;
    color: #2d2d2dbf !important;
    font-size:13px;
    font-style: italic;
    text-decoration: underline !important;
    border: 1px solid transparent !important;
  }
{%- endstyle -%}

{%- for block in section.blocks -%}
  {% case block.type %}
    {%- when 'heading' -%}
      {% assign heading = block.settings.heading | escape %}
      {% assign words = heading | split: ' ' %}

      <!-- Capitalize each word manually -->
      {% assign capitalized_words = '' %}
      {% for word in words %}
        {% if forloop.first %}
          {% assign capitalized_words = word | capitalize %}
        {% else %}
          {% assign capitalized_words = capitalized_words | append: ' ' | append: word | capitalize %}
        {% endif %}
      {% endfor %}

      {% assign collection_name = heading %}
      {% assign collection_id = '' %}

      {% for collection in collections %}
        {% if collection.title == collection_name %}
          {% assign collection_id = collection.id %}
          {% break %}
        {% endif %}
      {% endfor %}

      {% if collection_id != '' %}
      {% else %}

      {% endif %}
  {% endcase %}
{% endfor %}

<div class="artist_bio_section  image-with-text image-with-text--{{ section.settings.content_layout }} {{ section.settings.testimonial_page_box_class }}  page-width isolate{% if settings.text_boxes_border_thickness > 0 and settings.text_boxes_border_opacity > 0 and settings.media_border_thickness > 0 and settings.media_border_opacity > 0 %} collapse-borders{% endif %}{% unless section.settings.color_scheme == 'background-1' and settings.media_border_thickness > 0 and settings.text_boxes_shadow_opacity == 0 and settings.text_boxes_border_thickness == 0 or settings.text_boxes_border_opacity == 0 %} collapse-corners{% endunless %} section-{{ section.id }}-padding">
  <div class="image-with-text__grid grid grid--gapless grid--1-col grid--{% if section.settings.desktop_image_width == 'medium' %}2-col-tablet{% else %}3-col-tablet{% endif %}{% if section.settings.layout == 'text_first' %} image-with-text__grid--reverse{% endif %}">
    <div class="image-with-text__media-item image-with-text__media-item--{{ section.settings.desktop_image_width }} image-with-text__media-item--{{ section.settings.desktop_content_position }} grid__item">
      <div
        class="image-with-text__media artist-media image-with-text__media--{{ section.settings.height }} gradient color-{{ section.settings.color_scheme }} global-media-settings {% if section.settings.image != blank %}media{% else %}image-with-text__media--placeholder placeholder{% endif %}"
        {% if section.settings.height == 'adapt' and section.settings.image != blank %}
          style="padding-bottom: {{ 1 | divided_by: section.settings.image.aspect_ratio | times: 100 }}%;"
        {% endif %}
      >
        {% if template == 'product' %}
          {% assign target_collection_id = collection_id %}
          <!-- Loop through all collections and display a specific metafield -->
          {% for collection in collections %}
            {% if collection.id == target_collection_id %}
              {% assign artist_image = collection.metafields.custom.artist_image %}

              <!-- Display the collection title and metafield value -->

              {% if artist_image %}
                <img src="{{ artist_image | img_url: 'large' }}">
              {% endif %}
            {% endif %}
          {% endfor %}
        {% else %}
          {% if collection.metafields.custom.artist_image %}
            {% assign artist_image = collection.metafields.custom.artist_image %}
            <img src="{{ artist_image | img_url: 'large' }}">
          {%- else -%}
            {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
          {%- endif -%}
        {% endif %}
      </div>
    </div>
    <div class="image-with-text__text-item grid__item">
      <div
        id="ImageWithText--{{ section.id }}"
        class="image-with-text__content image-with-text__content--{{ section.settings.desktop_content_position }} image-with-text__content--desktop-{{ section.settings.desktop_content_alignment }} image-with-text__content--mobile-{{ section.settings.mobile_content_alignment }} image-with-text__content--{{ section.settings.height }} gradient color-{{ section.settings.color_scheme }} content-container"
      >
        {%- for block in section.blocks -%}
          {% case block.type %}
            {%- when 'heading' -%}
              <h1 id="font700" class="image-with-text__heading">
                {{ block.settings.heading | upcase }}
              </h1>
              <div>{{ product.vendor }}</div>
              <p
                class="artist--bio image-with-text__text image-with-text__text--caption {{ block.settings.text_style }} {{ block.settings.text_style }}--{{ block.settings.text_size }} {{ block.settings.text_style }}"
                {{ block.shopify_attributes }}
              >
                {% if template == 'product' %}
                  {% assign target_collection_id = collection_id %}
                  <!-- Loop through all collections and display a specific metafield -->
                  {% for collection in collections %}
                    {% if collection.id == target_collection_id %}
                      {% assign about_artist_before_read_more = collection.metafields.custom.about_artist_before_read_more %}

                      <!-- Display the collection title and metafield value -->

                      {% if about_artist_before_read_more %}
                        <p
                          class="artist--bio image-with-text__text image-with-text__text--caption {{ block.settings.text_style }} {{ block.settings.text_style }}--{{ block.settings.text_size }} {{ block.settings.text_style }}"
                          {{ block.shopify_attributes }}
                        >
                          {{ about_artist_before_read_more }}
                        </p>
                      {% endif %}
                    {% endif %}
                  {% endfor %}
                {% endif %}

                {% if collection.metafields.custom.about_artist_before_read_more %}
                  {{ collection.metafields.custom.about_artist_before_read_more }}
                {% endif %}
              </p>

              {% if template == 'product' %}
                {% assign target_collection_id = collection_id %}
                <!-- Loop through all collections and display a specific metafield -->
                {% for collection in collections %}
                  {% if collection.id == target_collection_id %}
                    {% assign about_artist_after_read_more = collection.metafields.custom.about_artist_after_read_more %}

                    <!-- Display the collection title and metafield value -->

                    {% if about_artist_after_read_more %}
                      <p class="image-with-text__text rte body artist--bio">
                        {{ about_artist_after_read_more }}
                      </p>
                    {% endif %}
                  {% endif %}
                {% endfor %}
              {% else %}
                {% if collection.metafields.custom.about_artist_after_read_more %}
                  <p class="image-with-text__text rte body artist--bio">
                    {{ collection.metafields.custom.about_artist_after_read_more }}
                  </p>
                {% endif %}
              {% endif %}

            {%- when 'button' -%}
              {%- if block.settings.button_label != blank -%}
                <a
                  {% if block.settings.button_link == blank %}
                    onclick="openbio()" role="link"
                  {% else %}
                    href="{{ block.settings.button_link }}"
                  {% endif %}
                  class="newreadbtn"
                  {{ block.shopify_attributes }}
                >
                  {{ block.settings.button_label | escape }}
                </a>
              {%- endif -%}
          {%- endcase -%}
        {%- endfor -%}
      </div>
    </div>
  </div>
</div>

<script>
  var bioisopen = false;
  function openbio() {
    document.querySelector('.image-with-text__content .image-with-text__text.rte').classList.toggle('show-bio');
    if (bioisopen == false) {
      document.querySelector('.newreadbtn').innerHTML = '(Read less)';
      bioisopen = true;
    } else {
      document.querySelector('.newreadbtn').innerHTML = '(Read more)';
      bioisopen = false;
    }
  }
</script>
